<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity2"
        android:background="@color/black">
    <TextView
            android:text="TextView"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/detailStart"
            android:textColor="@color/colorLightGray"
            android:textSize="18sp"
            android:textStyle="bold" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/detailEnd" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.032" android:layout_marginBottom="2dp"/>
    <TextView
            android:text="TextView"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/detailEnd"
            android:textColor="@color/colorLightGray"
            android:textSize="18sp"
            android:textStyle="bold" app:layout_constraintBottom_toTopOf="@+id/detailDuration"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="2dp"/>
    <TextView
            android:text="TextView"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/detailDuration"
            android:textColor="@color/colorLightGray"
            android:textSize="18sp"
            android:textStyle="bold" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.132"/>
</androidx.constraintlayout.widget.ConstraintLayout>